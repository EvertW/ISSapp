<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuActivity">

    <FrameLayout
        android:id="@+id/menu_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/menu_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:space_item_text_size="16sp"
        app:space_item_icon_size="24dp"
        app:inactive_item_color="@color/gray"
        app:active_item_color="@color/darkgray"
        app:active_centre_button_icon_color="@color/darkgray"
        app:inactive_centre_button_icon_color="@color/darkgray"
        app:centre_button_color="@android:color/white"
        app:centre_button_icon="@drawable/ic_satellite"
        app:space_background_color="@android:color/white"
        android:layout_gravity="bottom"/>
</androidx.constraintlayout.widget.ConstraintLayout>